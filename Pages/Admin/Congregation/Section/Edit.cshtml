@page
@model territory.mobi.Pages.Admin.Congregation.Sections.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@ViewData["Cong"] Section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Section.SectionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Section.CongId" />
            <div class="form-group">
                <label asp-for="Section.SectionTitle" class="control-label"></label>
                <input asp-for="Section.SectionTitle" class="form-control" />
                <span asp-validation-for="Section.SectionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section.SortOrder" class="control-label"></label>
                <input asp-for="Section.SortOrder" class="form-control" />
                <span asp-validation-for="Section.SortOrder" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@Model.Section.CongId">Back to Sections for @ViewData["Cong"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
