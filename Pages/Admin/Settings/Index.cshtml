@page
@model territory.mobi.Pages.Admin.Settings.IndexModel

@{
    ViewData["Title"] = "Site Settings";
}

<h4>Site Settings</h4>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Setting[0].SettingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setting[0].SettingValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Setting[0].CongId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Setting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SettingType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettingValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CongId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SettingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SettingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SettingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
