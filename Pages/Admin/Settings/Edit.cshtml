@page
@model territory.mobi.Pages.Admin.Settings.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Site Settings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Setting.SettingId" />
            <div class="form-group">
                <label asp-for="Setting.SettingType" class="control-label"></label>
                <input asp-for="Setting.SettingType" class="form-control" />
                <span asp-validation-for="Setting.SettingType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setting.SettingValue" class="control-label"></label>
                <input asp-for="Setting.SettingValue" class="form-control" />
                <span asp-validation-for="Setting.SettingValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setting.CongId" class="control-label"></label>
                <input asp-for="Setting.CongId" class="form-control" />
                <span asp-validation-for="Setting.CongId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
